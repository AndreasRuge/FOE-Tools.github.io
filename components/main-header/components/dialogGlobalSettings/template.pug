div.modal-card(style="width: auto")
  header.modal-card-head
    p.modal-card-title {{$t('components.site_layout.global_config')}}
  section.modal-card-body
    yes-no(v-model="fixedMainMenu" :label="$t(i18nPrefix + 'fixed_main_menu')")

    t-label(:label="$t(i18nPrefix + 'select_gb_style')")
    ul.list-none(style="list-style-type: none;")
      li.mt-2(v-for="(style, index) in gbSelectModes" :key="style.key")
        t-label
          input(type="radio" v-model="gbSelectMode" :value="style.key")
          span.ml-3 {{style.text}}

    t-label(:label="$t(i18nPrefix + 'day_night')")
    ul.list-none(style="list-style-type: none;")
      li.mt-2(v-for="(style, index) in dayNightModes" :key="style.key")
        t-label
          input(type="radio" v-model="dayNightMode" :value="style.key")
          span.ml-3 {{style.text}}

    day-night(v-if="dayNightMode === 'auto'" @dayStartChange="$emit('dayStartChange')" @nightStartChange="$emit('nightStartChange')")

  footer.modal-card-foot
    button.button.is-danger(@click="resetSettings()") {{$t('utils.Reset')}}
    button.button.is-primary(@click="$parent.close()") {{$t('utils.Confirm')}}/{{$t('utils.Close')}}
