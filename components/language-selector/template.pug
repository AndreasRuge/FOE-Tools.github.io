b-dropdown
  button.button(slot="trigger")
    span {{$t('lang.' + this.$i18n.i18next.language + '.original')}}
    span.icon
      i.fas.fa-chevron-down

  b-dropdown-item(v-for="lang in supportedLocales" :key="lang.key" data-lang="lang" @click="currentLang = lang.key" :class="[lang.key === currentLang ? 'is-active' : '']") {{ lang.displayName }}
  hr.navbar-divider
  b-dropdown-item(@click="$router.push($i18nPath('help-to-translate-the-site'))")
    span.icon.is-icon-2rem(style="vertical-align: middle;")
      i.fas.fa-language
    span(style="vertical-align: middle;") &nbsp;&nbsp;&nbsp;{{$t("main_menu.help_to_translate_the_site")}}
