input(
  v-model="newValue"
  :value="newValue"
  ref="element"
  class="w-5 h-5 text-blue-500 transition duration-100 ease-in-out border-gray-300 rounded shadow-sm focus:border-blue-500 focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 focus:ring-offset-0 disabled:opacity-50 cursor-pointer disabled:cursor-not-allowed"
  type="checkbox"
  @input="$emit('input', $event.target.checked)")
