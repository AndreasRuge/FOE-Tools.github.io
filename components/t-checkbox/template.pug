.inline-flex.t-input(
  :class=`{
  // Border
  "border-gray-300 dark:border-gray-600 w-5 h-5": true,
  // Focus
  "focus-within:border focus-within:outline-none focus-within:ring focus-within:border-blue-300 rounded": true,
  // Animation
  "duration-100 ease-in-out transition": true,
}`
)
  input(
    v-model="newValue",
    :value="newValue",
    ref="element",
    :class=`{
    "w-5 h-5 rounded disabled:opacity-50 cursor-pointer disabled:cursor-not-allowed focus-shadow-none focus:border-blue-300 text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 border-gray-300 dark:border-gray-600": true,
    }`,
    type="checkbox",
    @input="$emit('input', $event.target.checked)"
  )
